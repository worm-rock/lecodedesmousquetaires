/* groovylint-disable LineLength */
pipeline {
    agent any
                 
   environment { 
            DOTCOMMIT_VERSION= '5.0.'
           }
        stages {
            stage('Initial Notification') {
                steps {
                    //put webhook for your notification channel
                    echo "Build ${env.JOB_NAME} branche ${env.BRANCH_NAME}  version $DOTCOMMIT_VERSION${env.BUILD_NUMBER}-${env.BRANCH_NAME}"
                    //sh 'export PATH="$PATH:/root/.dotnet/tools"'
                }
            } 
            stage('Restore') {
                steps {                    
                    sh 'dotnet restore /monterCicd1h/applicatif/HelloJenkins/HelloJenkins.sln'
                }
            }
            stage('Build') {
                steps {
                    sh 'dotnet build AtelierCuisine/monterCicd1h/applicatif/HelloJenkins/HelloJenkins.sln'
                }
            }
          
            stage('Test') {
                steps {
                    sh 'dotnet test  AtelierCuisine/monterCicd1h/applicatif/HelloJenkins/HelloJenkins.sln'
                    sh 'dotnet test  AtelierCuisine/monterCicd1h/applicatif/HelloJenkins/HelloJenkins.sln'
               }
            }
            stage('CleanDown') {
                steps {
                    sh "rm -rf nupkgs"
                }
            }
        }
}
